{
  "name": "stylelint-demo",
  "version": "0.0.1",
  "description": "Demo stylelint",
  "main": "server.js",
  "scripts": {
    "lint:js": "eslint . --ignore-path .gitignore --fix",
    "lint:css": "stylelint src/common/**/*.css",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "test": "npm run bundle",
    "prebundle": "rimraf dist",
    "bundle": "NODE_ENV=production webpack --config webpack.config.prod.js",
    "heroku-postbuild": "npm run bundle",
    "start": "NODE_ENV=production node server",
    "start:dev": "NODE_ENV=development nodemon --ignore src/common/ server.js"
  },
  "dependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.10.4",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-webpack-loaders": "^0.7.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "css-loader": "^0.23.1",
    "express": "^4.12.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.21.0",
    "lodash.debounce": "^4.0.6",
    "morgan": "^1.7.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.9.1",
    "react": "^15.0.1",
    "react-ace": "^3.4.1",
    "react-dom": "^15.0.1",
    "rimraf": "^2.5.3",
    "serve-favicon": "^2.3.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.0.3",
    "stylelint-config-standard": "^11.0.0",
    "webpack": "^1.13.1",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^3.0.0",
    "eslint-config-stylelint": "^3.0.0",
    "eslint-loader": "^1.4.0",
    "eslint-plugin-react": "^5.2.2",
    "nodemon": "^1.9.2",
    "npm-run-all": "^2.3.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.0"
  },
  "engines": {
    "node": "6.2.1"
  },
  "repository": {
    "//type": "git",
    "//url": "https://hyperdev.com/#!/project/welcome-project"
  },
  "babel": {
    "presets": [
      "react",
      "stage-2",
      "es2015"
    ]
  },
  "eslintConfig": {
    "extends": [
      "stylelint",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "rules": {
      "arrow-spacing": 2,
      "no-var": 2,
      "object-shorthand": 2,
      "prefer-const": 2,
      "template-curly-spacing": 2
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-named": "always-where-possible",
      "color-no-hex": true,
      "custom-media-pattern": "^([a-z]+-?)*([a-z]+)$",
      "custom-property-no-outside-root": true,
      "custom-property-pattern": "^([a-z]+-?)*([a-z]+)$",
      "declaration-block-no-duplicate-properties": true,
      "declaration-block-properties-order": [
        [
          "composes"
        ],
        {
          "unspecified": "bottomAlphabetical"
        }
      ],
      "font-family-name-quotes": "always-where-recommended",
      "font-weight-notation": "numeric",
      "function-url-quotes": "always",
      "function-whitelist": "",
      "no-descending-specificity": true,
      "no-duplicate-selectors": true,
      "property-blacklist": [
        "float"
      ],
      "property-no-vendor-prefix": true,
      "root-no-standard-properties": true,
      "rule-nested-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "selector-class-pattern": "^([a-z]+[a-zA-Z]*|ng-[a-z]+(-[a-z]+)*)$",
      "selector-max-specificity": "0,4,0",
      "selector-no-type": true,
      "selector-no-universal": true,
      "selector-no-vendor-prefix": true,
      "selector-root-no-composition": true,
      "string-quotes": "double",
      "unit-whitelist": [
        "%",
        "px",
        "em",
        "vh"
      ],
      "value-no-vendor-prefix": true
    }
  },
  "license": "MIT"
}
