{
  "name": "stylelint-demo",
  "version": "0.0.1",
  "private": true,
  "description": "Demo stylelint",
  "repository": "stylelint/stylelint-demo",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "prebundle": "rimraf dist",
    "bundle": "NODE_ENV=production webpack --config webpack.config.prod.js",
    "format": "prettier . --write",
    "heroku-postbuild": "npm run bundle",
    "lint": "npm-run-all --parallel lint:*",
    "lint:css": "stylelint src/common/**/*.css",
    "lint:formatting": "prettier . --check",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "prepare": "husky install",
    "start": "NODE_ENV=production node index.js",
    "start-dev": "NODE_ENV=development nodemon --ignore src/common/ index.js",
    "test": "jest",
    "posttest": "npm run bundle"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": "stylelint --cache --fix",
    "*.js": "eslint --cache --fix",
    "*.{css,js,json,md,yml}": "prettier --write"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": "@stylelint/prettier-config",
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react",
      "react-hooks"
    ],
    "extends": [
      "stylelint",
      "plugin:react/recommended"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "ignores": [
            "modules"
          ]
        }
      ]
    },
    "root": true
  },
  "remarkConfig": {
    "plugins": [
      "@stylelint/remark-preset"
    ]
  },
  "stylelint": {
    "plugins": [
      "stylelint-order"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
      "alpha-value-notation": "percentage",
      "at-rule-no-vendor-prefix": true,
      "at-rule-whitelist": [
        "import",
        "media"
      ],
      "color-function-notation": "modern",
      "color-named": "always-where-possible",
      "custom-media-pattern": "^([a-z]+-?)*([a-z]+)$",
      "custom-property-pattern": "^([a-z]+-?)*([a-z]+)$",
      "declaration-block-no-duplicate-properties": true,
      "font-family-name-quotes": "always-where-recommended",
      "font-weight-notation": "numeric",
      "function-url-quotes": "always",
      "function-whitelist": [
        "color",
        "counter",
        "hsl",
        "linear-gradient"
      ],
      "hue-degree-notation": "angle",
      "media-feature-name-no-vendor-prefix": true,
      "no-descending-specificity": true,
      "no-duplicate-selectors": true,
      "order/properties-alphabetical-order": true,
      "property-blacklist": [
        "float"
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "property-no-vendor-prefix": true,
      "selector-class-pattern": "^([a-z]+[a-zA-Z]*|ng-[a-z]+(-[a-z]+)*)$",
      "selector-max-attribute": 0,
      "selector-max-specificity": "0,4,0",
      "selector-max-type": 0,
      "selector-max-universal": 0,
      "selector-no-vendor-prefix": true,
      "selector-pseudo-class-whitelist": [
        "hover",
        "focus",
        "global"
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "string-quotes": "double",
      "unit-whitelist": [
        "%",
        "deg",
        "px",
        "em",
        "vh"
      ],
      "value-no-vendor-prefix": true
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "compression": "^1.7.4",
    "css-loader": "^5.2.7",
    "express": "^4.17.1",
    "html-webpack-plugin": "^4.4.1",
    "lz-string": "^1.4.4",
    "morgan": "^1.10.0",
    "postcss": "^7.0.35",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prismjs": "^1.21.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-css-modules": "^4.7.11",
    "react-dom": "^17.0.2",
    "react-simple-code-editor": "0.11.0",
    "rimraf": "^3.0.2",
    "serve-favicon": "^2.5.0",
    "style-loader": "^1.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-standard": "^22.0.0",
    "use-debounce": "^3.4.3",
    "webpack": "^4.44.1",
    "whatwg-fetch": "^3.4.0"
  },
  "devDependencies": {
    "@stylelint/prettier-config": "^2.0.0",
    "@stylelint/remark-preset": "^2.0.0",
    "eslint": "~7.7.0",
    "eslint-config-stylelint": "~13.1.0",
    "eslint-plugin-react": "~7.24.0",
    "eslint-plugin-react-hooks": "~4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "remark-cli": "^8.0.1",
    "stylelint-order": "^4.1.0",
    "supertest": "^4.0.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "engines": {
    "node": "12"
  },
  "postcss": {
    "map": true,
    "plugins": {
      "postcss-preset-env": {
        "features": {
          "nesting-rules": true
        }
      }
    }
  }
}
